@model ResetPassword

@{
	Bundles.Reference("~/Content/js/_lib/jquery.validate");
}
@section Title {
	Reset Your Password
}

<div class="page-header">
	<h2>Reset Your Password</h2>
</div>

@using(Html.BeginForm()) {
	@Html.ValidationSummary(false)

	<div class="form-horizontal row">
		<fieldset class="col-md-6">
			<p>Use the form below to set a new password for your account.</p>
			<div class="form-group">
				@Html.LabelFor(x => x.Password, new { @class = "col-md-2 control-label" })
				<div class="controls">
					@Html.PasswordWithMaxLengthFor(x => x.Password, new { @class = "form-control" })
					@Html.ValidationMessageFor(x => x.Password)
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(x => x.PasswordConfirm, new { @class = "col-md-2 control-label" })
				<div class="controls">
					@Html.PasswordWithMaxLengthFor(x => x.PasswordConfirm, new { @class = "form-control" })
					@Html.ValidationMessageFor(x => x.PasswordConfirm)
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-offset-2 col-md-8">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
			</div>
		</fieldset>
	</div>
}