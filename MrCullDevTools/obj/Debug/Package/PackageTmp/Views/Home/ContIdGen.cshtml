@using System.Linq

@model ContIdGen
@{
    ViewBag.Nav = Navigation.Home;
}

@section Title {
    Container ID Generator
}
<div class="page-header">
    <h2>Container ID Generator</h2>
</div>

<div  class="form-horizontal row">
    <div class="col-sm-4">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(false)
            <fieldset class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(x => x.Prefix, new { @class = "col-md-6 control-label" })
                    <div class="col-md-4">
                        @Html.TextBoxWithMaxLengthFor(x => x.Prefix, new { @class = "form-control" })
                        <span class="form-control-static username-valid hide" title="Prefix is valid"><i class="icon-ok"></i></span>
                        <span class="form-control-static username-invalid hide" title="Prefix is not valid"><i class="icon-remove"></i></span>
                        @Html.ValidationMessageFor(x => x.Prefix)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Quantity, new { @class = "col-md-6 control-label" })
                    <div class="col-md-4">
                        @Html.TextBoxWithMaxLengthFor(x => x.Quantity, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Quantity)
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Get Container IDs</button>
                    </div>
                </div>
            </fieldset>
        }
    </div>

    <div class="col-sm-2">
    @if (Model.ContainerIDs.Count > 0)
    {

        <table class="table table-hover">
            <tr>
                <th>Generated ID</th>
            </tr>
            @foreach (var id in Model.ContainerIDs)
            {
                <tr>
                    <td class="left">@id</td>
                </tr>
            }
        </table>
    }
    </div>
   
</div>
