@using System.Linq

@model JsonFormatter
@{
    ViewBag.Nav = Navigation.Home;
}

@section Title {
    JSON Formatter
}

<h2>JSON Formatter</h2>


<div class="form-horizontal row">
    <div class="col-sm-10">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(false)
            <fieldset class="col-md-12">
                <div class="form-group">
                    @Html.TextArea("inputJson", null, new { @class = "form-control", @rows = "10" })
<!--                    @Html.ValidationMessageFor(x => x.inputJson)-->


                </div>
                <div class="form-group">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Format JSON</button>
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>
@if (!Model.outputJson.IsEmpty())
{
    <div class="col-sm-10">
        @Html.TextArea("outputJson", null, new { @class = "form-control", @rows = Model.outputJson.Split('\n').ToList().Count() })
    </div>
}
