@{
	Layout = "~/Views/Shared/_Layout.cshtml";

	if (ViewContext.RouteData.Values["area"] == null && !ViewContext.IsChildAction)
	{
		try
		{
			Bundles.Reference("~/Content/js/" + ViewContext.RouteData.Values["controller"] + "/" + ViewContext.RouteData.Values["action"] + ".js");
		}
		catch (ArgumentException)
		{
			// Means the location does not exist yet
		}
		try
		{
			Bundles.Reference("~/Content/css/" + ViewContext.RouteData.Values["controller"] + "/" + ViewContext.RouteData.Values["action"] + ".css");
		}
		catch (ArgumentException)
		{
			// Means the location does not exist yet
		}
	}
}
